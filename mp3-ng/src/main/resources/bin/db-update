#!/bin/bash

function findmountpoint()
{
  dir=$(dirname $1)
  mountpoint $dir
  RC=$?
  if [ "$RC" != 0 ]
  then
    find
  fi
}

if [ -z "$MEDIA_LIBRARY_ROOT" ]
then
  # canoncialize the path
  #script=$(readlink -f $0)
  MEDIA_LIBRARY_ROOT=/media/0B83-851C
fi


if [ -z "$JAVA_HOME" ]
then
  export JAVA_HOME=$MEDIA_LIBRARY_ROOT/tools/lib/jre1.7.0_05
  export PATH=$PATH:$JAVA_HOME/bin
  export LD_LIBRARY_PATH=$PATH:$JAVA_HOME/lib
fi

export CLASSPATH=$MEDIA_LIBRARY_ROOT/tools/lib/jcoderz-mp3/mp3-ng-1.0.0.SNAPSHOT.jar:$MEDIA_LIBRARY_ROOT/tools/lib/jcoderz-mp3/fawkez-commons-2.0.0.jar:$MEDIA_LIBRARY_ROOT/tools/lib/jcoderz-mp3/lucene-core-3.6.0.jar

java org.jcoderz.mp3.intern.lucene.DatabaseUpdater $MEDIA_LIBRARY_ROOT

#source $MEDIA_LIBRARY_ROOT/tools/etc/db-update

function findroot ()
{
  dirname
}
